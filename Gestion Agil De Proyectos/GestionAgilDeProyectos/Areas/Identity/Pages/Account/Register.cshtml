@page
@model RegisterModel
@{
	ViewData["Title"] = "Registrate";
}
<head>
	<link href="@Url.Content("~/assets/css/Forms.css")" rel="stylesheet" />
</head>
<partial name="_MenuSistema" />
<section class="category-list-area pt-130">
    <div class="container">
        <div class="category-list-wrapper">
            <div class="row">
                <section>
                    <div class="section-title">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                    <div class="row" style="padding-top:20px">
                        <div class="col-md-12">
							<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>

								<div class="form-row" style="font-size:14px">
									<div class="col">
										<label asp-for="Input.Nombre" class="control-label"></label>
										<input asp-for="Input.Nombre" class="form-control" placeholder="Nombre" style="font-size:12px" required />
										<span asp-validation-for="Input.Nombre" class="text-danger"></span>
									</div>
									<div class="col">
										<label asp-for="Input.Apellido" class="control-label"></label>
										<input asp-for="Input.Apellido" class="form-control" placeholder="Apellido" style="font-size:12px" required />
										<span asp-validation-for="Input.Apellido" class="text-danger"></span>
									</div>
									<div class="col">
										<label asp-for="Input.Rut" class="control-label"></label>
										<input asp-for="Input.Rut" class="form-control" placeholder="Rut sin puntos ni digito verificador" style="font-size:12px" required MaxLength="9" />
										<span asp-validation-for="Input.Rut" class="text-danger"></span>
									</div>
								</div>


								<div class="row justify-content-start" style="font-size:14px">
									<div class="col-4">
										<label asp-for="Input.FechaNacimiento" class="control-label"></label>
										<input asp-for="Input.FechaNacimiento" type="date" class="form-control" placeholder="Fecha Nacimiento" style="font-size:12px" required />
										<span asp-validation-for="Input.FechaNacimiento" class="text-danger"></span>
									</div>
									<div class="col-4">
										<label asp-for="Input.PhoneNumber" class="control-label"></label>
										<input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefono" style="font-size:12px" required />
										<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
									</div>
								</div>

								<div class="form-row" style="font-size:14px">
									<div class="col">
										<label asp-for="Input.Email" class="control-label"></label>
										<input asp-for="Input.Email" class="form-control" placeholder="Correo" style="font-size:12px" required />
										<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
									<div class="col">
										<label asp-for="Input.Password" class="control-label"></label>
										<input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Contraseña" style="font-size:12px" required />
										<span asp-validation-for="Input.Password" class="text-danger"></span>
									</div>
									<div class="col">
										<label asp-for="Input.ConfirmPassword" class="control-label"></label>
										<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirmar Contraseña" style="font-size:12px" required />
										<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
									</div>
								</div>

								<div class="form-row" style="font-size:14px">
									<div class="col-auto mr-auto">
										<label class="control-label"><a href="" data-toggle="modal" data-target="#exampleModalLong">Términos y Condiciones</a></label>
										<br />
										<input asp-for="Input.Terms" type="checkbox" class="col-auto mr-auto" required />
										<br />
										<span asp-validation-for="Input.Terms" class="text-danger"></span>
									</div>

									<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" style="padding-top:80px">
										<div class="modal-dialog" role="document">
											<div class="modal-content">
												<div class="modal-header">
													<h5 class="modal-title" id="exampleModalLongTitle">TERMINOS Y CONDICIONES:</h5>
													<button type="button" class="close" data-dismiss="modal" aria-label="Close">
														<span aria-hidden="true">&times;</span>
													</button>
												</div>
												<div class="modal-body">
													<p style="font-size: 12px">
														Terminos y Condiciones
													</p>
												</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
												</div>
											</div>
										</div>
									</div>
								</div>

								<div class="form-group">
									<button id="registerSubmit" type="submit" class="btn btn-success" value="Registrar">Registrar</button>
								</div>

								
							</form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<br />
<br />
<br />
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}