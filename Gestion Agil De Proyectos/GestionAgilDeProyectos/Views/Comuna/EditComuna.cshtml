@using GestionAgilDeProyectos.Models
@model Comuna
@{
    ViewData["Title"] = "Editar Comuna";
}
<head>
    <link href="@Url.Content("~/assets/css/Forms.css")" rel="stylesheet" />
</head>
<partial name="_MenuSistema" />
<section class="category-list-area pt-100">
    <div class="container">
        <div class="category-list-wrapper">
            <div class="row">
                <section>
                    <div class="section-title">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                    <div class="row" style="padding-top:20px">
                        <div class="col-md-12">
                            <form asp-action="EditComuna">
                                <input type="hidden" asp-for="FechaIngreso" />
                                <input type="hidden" asp-for="Id" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-row" style="font-size:14px">
                                    <div class="col-5">
                                        <label asp-for="Nombre" class="control-label"></label>
                                        <input asp-for="Nombre" class="form-control" placeholder="Nombre de la Comuna" style="font-size:12px" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="col-5">
                                        <label asp-for="ProvinciaID" class="control-label"></label>
                                        <select asp-for="ProvinciaID" class="form-control" style="font-size:12px" asp-items="ViewBag.ProvinciaID"><option selected disabled value="">- Seleccionar -</option></select>
                                        <span asp-validation-for="ProvinciaID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success" value="Actualizar">Actualizar</button> | <a asp-action="Index" style="text-decoration:none;color:black">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    @section Scripts {
                        @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</section>