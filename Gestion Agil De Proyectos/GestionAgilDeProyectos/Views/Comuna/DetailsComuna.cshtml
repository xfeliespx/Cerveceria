@using GestionAgilDeProyectos.Models
@model Comuna
@{
    ViewData["Title"] = "Detalle Comuna";
}
<head>
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons")" rel="stylesheet" type="text/css">
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            font-size: 12px;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 1px;
        }

        tr:nth-child(even) {
            background-color: #E8E8E8;
        }

        .selected {
            background-color: #C6EFED !important;
        }
    </style>
    <link href="@Url.Content("~/assets/css/bootstrap.minTest.css")" rel="stylesheet" />
</head>
<partial name="_MenuSistema" />
<section class="category-list-area pt-100">
    <div class="container">
        <div class="category-list-wrapper">
            <div class="row">
                <section>
                    <div class="container">
                        <div class="section-title">
                            <h2>@ViewData["Title"]</h2>
                        </div>
                        <div class="marco" style="padding-top:20px">
                            <div class="cmdb">
                                <div class="form-group" hidden>
                                    <select class="form-control" name="state" id="maxRows" hidden>
                                        <option value="5000">Show ALL Rows</option>
                                        <option value="5">5</option>
                                        <option value="10">10</option>
                                        <option value="12">12</option>
                                        <option value="15">15</option>
                                        <option value="18">18</option>
                                        <option value="20">20</option>
                                        <option value="50">50</option>
                                        <option value="70">70</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                                <div id="myTable">
                                    <div id="table-id">
                                        <div id="Nuevo">
                                            <table>
                                                <tr>
                                                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                                    <th>@Html.DisplayNameFor(model => model.Provincia.Nombre)</th>
                                                    <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                                                    <th>@Html.DisplayNameFor(model => model.FechaActualizacion)</th>
                                                </tr>
                                                <tr>
                                                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                                                    <td>@Html.DisplayFor(model => model.Provincia.Nombre)</td>
                                                    <td>@Html.DisplayFor(model => model.FechaIngreso)</td>
                                                    <td>@Html.DisplayFor(model => model.FechaActualizacion)</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="botones">
                            <div class="botoneIzquerdo">
                                <div class='pagination-container' style="font-size: 10px">
                                    <nav>
                                        <ul class="pagination">
                                            <li data-page="prev">
                                                <span> < <span class="sr-only">(current)</span></span>
                                            </li>
                                            <li data-page="next" id="prev">
                                                <span> > <span class="sr-only">(current)</span></span>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <a asp-action="EditComuna" asp-route-id="@Model.Id" class="btn btn-success">Editar</a> | <a asp-action="Index" style="text-decoration:none;color:black">Volver</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>