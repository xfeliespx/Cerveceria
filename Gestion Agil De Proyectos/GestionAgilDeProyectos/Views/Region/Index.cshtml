@using GestionAgilDeProyectos.Models
@model IEnumerable<Region>
@{
    ViewData["Title"] = "Listado de Region";
}
<head>
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons")" rel="stylesheet" type="text/css">
    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }

        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 2.8px;
        }

        tr:nth-child(even) {
          background-color: #E8E8E8;
        }

        .selected {
            background-color: #C6EFED !important;
        }
    </style>
</head>
    <section id="about" class="about">
      <div class="container">
      <div class="section-title">
        <h2>@ViewData["Title"]</h2>
      </div>
<div class="marco">
    <div class="cmdb">
        <div class="form-group" hidden>
            <select class="form-control" name="state" id="maxRows" hidden>
                <option value="5000">Show ALL Rows</option>
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="12">12</option>
                <option value="15">15</option>
                <option value="18">18</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="70">70</option>
                <option value="100">100</option>
            </select>
        </div>
        <div id="myTable">
            <div id="table-id">
                <div id="Nuevo">
                    <table >
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaActualizacion)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(item => item.Nombre))
                            {
                                <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                                    @if (item.FechaActualizacion.Year == 0001)
                                    {
                                        <td>Sin Actualización</td>
                                    }
                                    @if (item.FechaActualizacion.Year != 0001)
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.FechaActualizacion)</td>                                        
                                    }
                                    <td>
                                        <a asp-action="EditRegion" asp-route-id="@item.Id" style="text-decoration:none;color:#2DB6A3">
                                            <i class="material-icons" style="font-size: 16px" title="Editar">
                                                edit
                                            </i>
                                        </a> |
                                        <a asp-action="DetailsRegion" asp-route-id="@item.Id" style="text-decoration:none;color:#2DB6A3">
                                            <i class="material-icons" style="font-size: 16px" title="Detalles">
                                                description
                                            </i>
                                        </a> |
                                        <a asp-action="DeleteRegion" asp-route-id="@item.Id" style="text-decoration:none;color:#2DB6A3">
                                            <i class="material-icons" style="font-size: 16px" title="Eliminar">
                                                delete
                                            </i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="botones">
    <div class="botoneIzquerdo">
        <div class='pagination-container' style="font-size: 10px">
            <nav>
                <ul class="pagination">
                    <li data-page="prev">
                        <span> < <span class="sr-only">(current)</span></span>
                    </li>
                    <li data-page="next" id="prev">
                        <span> > <span class="sr-only">(current)</span></span>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="botoneDerecho"><a asp-action="AddRegion" class="btn btn-default">Agregar</a></div>
</div>
      </div>
    </section>