@using GestionAgilDeProyectos.Models
@model IEnumerable<Cursos>
@{
    ViewData["Title"] = "Administrar Publicaciones de Cursos";
}
<head>
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons")" rel="stylesheet" type="text/css">
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            font-size: 12px;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 1px;
        }

        tr:nth-child(even) {
            background-color: #E8E8E8;
        }

        .selected {
            background-color: #C6EFED !important;
        }
    </style>
    <link href="@Url.Content("~/assets/css/bootstrap.minTest.css")" rel="stylesheet" />
</head>
<partial name="_MenuSistema" />
<section class="category-list-area pt-100">
    <div class="container">
        <div class="category-list-wrapper">
            <div class="row">
                <section>
                    <div class="container">
                        <div class="section-title">
                            <h2>@ViewData["Title"]</h2>
                        </div>
                        <div class="botones" style="padding-top:10px">
                            <div class="botoneDerecho"><a asp-action="Cursos" class="btn btn-info">Vista Previa Usuario</a> | <a asp-action="Solicitudes" class="btn btn-info">Gestionar Solicitudes</a></div>
                        </div>
                        <div class="marco" style="padding-top:20px">
                            <div class="cmdb">
                                <div class="form-group" hidden>
                                    <select class="form-control" name="state" id="maxRows" hidden>
                                        <option value="5000">Show ALL Rows</option>
                                        <option value="5">5</option>
                                        <option value="10">10</option>
                                        <option value="12">12</option>
                                        <option value="15">15</option>
                                        <option value="18">18</option>
                                        <option value="20">20</option>
                                        <option value="50">50</option>
                                        <option value="70">70</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                                <div id="myTable">
                                    <div id="table-id">
                                        <div id="Nuevo">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                                        <th>Comuna</th>
                                                        <th>Fecha Publicacion</th>
                                                        <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                                                        <th>@Html.DisplayNameFor(model => model.ValorPeso)</th>
                                                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.OrderByDescending(item => item.FechaIngreso))
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Comuna.Nombre)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.FechaCurso)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.ValorPeso)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                                            <td>
                                                                <a asp-action="EditCursos" asp-route-id="@item.Id" style="text-decoration:none;color:#2DB6A3">
                                                                    <i class="material-icons" style="font-size: 16px" title="Editar">
                                                                        edit
                                                                    </i>
                                                                </a> |
                                                                <a asp-action="DetailsCursos" asp-route-id="@item.Id" style="text-decoration:none;color:#2DB6A3">
                                                                    <i class="material-icons" style="font-size: 16px" title="Detalles">
                                                                        description
                                                                    </i>
                                                                </a> |
                                                                <a asp-action="DeleteCursos" asp-route-id="@item.Id" style="text-decoration:none;color:#2DB6A3">
                                                                    <i class="material-icons" style="font-size: 16px" title="Eliminar">
                                                                        delete
                                                                    </i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="botones">
                            <div class="botoneIzquerdo">
                                <div class='pagination-container' style="font-size: 10px">
                                    <nav>
                                        <ul class="pagination">
                                            <li data-page="prev">
                                                <span> < <span class="sr-only">(current)</span></span>
                                            </li>
                                            <li data-page="next" id="prev">
                                                <span> > <span class="sr-only">(current)</span></span>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="botoneDerecho"><a asp-action="AddCursos" class="btn btn-success">Agregar</a></div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>